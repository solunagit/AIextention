{
  "manifest_version": 3,
  "name": "Page Assistant",
  "version": "1.0.0",
  "description": "AI assistant that analyzes page content using OpenAI's 4o-mini model",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_title": "Page Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["sidebar.html", "sidebar.css"],
    "matches": ["<all_urls>"]
  }]
}